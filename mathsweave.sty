TeXCells[input_] := ^^J%
  With[{output = Evaluate[ToExpression[input]]}, ^^J%
   CellToTeX[input, Style -> "Input"] <> "^^J^^J" <> ^^J%
   Quiet[Check[CellToTeX[ToBoxes[output], Style -> "Output"], 
   CellToTeX[ToBoxes[output], 
